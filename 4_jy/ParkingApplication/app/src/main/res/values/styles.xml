<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_B3FFFFFF</item>
        <item name="colorPrimaryDark">@color/color_B6B6B6</item>
        <item name="colorAccent">@color/color_ffffff</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StatusBarTransTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_transparent</item>
        <item name="colorPrimaryDark">@color/color_transparent</item>
        <item name="colorAccent">@color/color_ffffff</item>
        <!-- Status Bar 투명 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/color_transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
