    <!---password 1부터 9까지-->
    <TextView
        android:id="@+id/txt_password_one"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_27"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_one"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_password_two"
        app:layout_constraintTop_toBottomOf="@id/ll_password" />

    <TextView
        android:id="@+id/txt_password_two"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_27"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_two"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_password_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_password" />

    <TextView
        android:id="@+id/txt_password_three"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_27"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_three"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toRightOf="@id/txt_password_two"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_password" />

    <TextView
        android:id="@+id/txt_password_four"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_four"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_password_five"
        app:layout_constraintTop_toBottomOf="@id/txt_password_one" />

    <TextView
        android:id="@+id/txt_password_five"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_five"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_password_four"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_password_one" />

    <TextView
        android:id="@+id/txt_password_six"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_six"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toRightOf="@id/txt_password_five"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_password_one" />

    <TextView
        android:id="@+id/txt_password_seven"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_seven"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_password_eight"
        app:layout_constraintTop_toBottomOf="@id/txt_password_six" />

    <TextView
        android:id="@+id/txt_password_eight"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_eight"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_password_seven"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_password_six" />

    <TextView
        android:id="@+id/txt_password_nine"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_nine"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toRightOf="@id/txt_password_eight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_password_six" />

    <TextView
        android:id="@+id/txt_password_zero"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/txt_round_corner"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_zero"
        android:textSize="@dimen/size_37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_password_nine" />

    <TextView
        android:id="@+id/txt_password_remove"
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_35"
        android:layout_marginTop="@dimen/size_20"
        android:background="@drawable/txt_as_arrow"
        android:fontFamily="@font/namsan_m"
        android:gravity="center"
        android:text="@string/txt_password_remove"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/size_35"
        app:layout_constraintLeft_toRightOf="@id/txt_password_zero"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_password_nine"
        app:layout_constraintTop_toTopOf="@+id/txt_password_zero" />

</androidx.constraintlayout.widget.ConstraintLayout>